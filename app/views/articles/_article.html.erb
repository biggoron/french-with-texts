<div class='article-thumbnail'>
  <%= link_to article_path(article) do %>
  <div class='article-image'>
   <%= image_tag article.image_name,
                 size: "120x120",
                 alt: article.image_name %> 
  </div>
  <div class='article-caption'>
    <span class='thumbnail-title'>
      <%= article.title %>
    </span>
  </div>
  <% end %> 
</div>
