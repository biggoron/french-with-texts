<%= form_for @article do |f| %>
  <p>
    <%= f.label :layout %><br>
    <%= f.select :layout, ['post', 'resource', 'lesson', 'link'] %><br>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </p>
  <p>
    <%= f.label :filename %><br>
    <%= f.text_field :filename %><br>
  </p>
  <p>
    <%= f.label :image_name %><br>
    <%= f.text_field :image_name %><br>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

